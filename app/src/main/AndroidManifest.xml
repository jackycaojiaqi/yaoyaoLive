<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fubang.video">


    <application
        android:name=".APP"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.WelcomeAtivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.MainActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".ui.PublishCircleActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".ui.SettingActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".ui.LoginActivity"
            android:launchMode="singleTask"></activity>
        <activity
            android:name=".ui.RegisterActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:launchMode="singleTask"></activity>
        <activity android:name=".ui.UserInfoActivity"></activity>
        <activity
            android:name=".ui.UserinfoEditActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:launchMode="singleTask"></activity>
        <activity
            android:name=".ui.RechargeActivity"
            android:launchMode="singleTask"></activity>
        <activity
            android:name=".ui.FeedBackActivity"
            android:launchMode="singleTask"></activity>
        <activity
            android:name=".ui.ChatActivity"
            android:launchMode="singleTask"></activity>
        <activity
            android:name="com.hyphenate.easeui.ui.EaseBaiduMapActivity"
            android:launchMode="singleTask"></activity>
        <activity
            android:name=".ui.LoginPasswordActivity"
            android:launchMode="singleTask"></activity>
        <activity
            android:name=".ui.VideoPlayActivity"
            android:launchMode="singleTask"></activity>
        <activity
            android:name=".ui.EditInfoActivity"
            android:launchMode="singleTask"></activity>
        <activity
            android:name=".ui.CircleInfoDetailActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustResize|stateHidden"></activity>
        <activity
            android:name=".ui.SearUserActivity"
            android:launchMode="singleTask"></activity>
        <activity
            android:name=".ui.RuleActivity"
            android:launchMode="singleTask"></activity>
        <!--语音通话界面-->
        <activity
            android:name="com.vmloft.develop.app.demo.call.VoiceCallActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme"></activity>
        <!--视频通话界面-->
        <activity
            android:name="com.vmloft.develop.app.demo.call.VideoCallActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme"></activity>

        <!-- 设置环信应用的appkey -->
        <meta-data
            android:name="EASEMOB_APPKEY"
            android:value="1115170714178429#yaoyao" />
        <!--声明sdk所需的 Service SDK核心功能-->
        <service
            android:name="com.hyphenate.chat.EMChatService"
            android:exported="true" />
        <!--声明sdk所需的receiver-->
        <receiver android:name="com.hyphenate.chat.EMMonitorReceiver">
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_REMOVED" />
                <data android:scheme="package" />
            </intent-filter>
            <!-- 可选filter -->
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.USER_PRESENT" />
            </intent-filter>
        </receiver>

        <!-- 开机自启动服务 -->
        <receiver android:name=".receive.StartServiceReceiver">
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </receiver>

        <meta-data
            android:name="UMENG_APPKEY"
            android:value="596c22a9a40fa3558500035f" />
        <meta-data
            android:name="UMENG_CHANNEL"
            android:value="yaoyao" />

        <!-- 百度地图所需的service -->
        <service
            android:name="com.baidu.location.f"
            android:enabled="true"
            android:process=":remote" />
        <meta-data
            android:name="com.baidu.lbsapi.API_KEY"
            android:value="3ecea51f560650b1ed8a4b99808f52e8" />
    </application>
    <!--项目权限配置-->
    <!--相机-->
    <uses-permission android:name="android.permission.CAMERA" />
    <!--蓝牙-->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <!--网络-->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--录音-->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!--震动权限-->
    <uses-permission android:name="android.permission.VIBRATE" />
    <!--访问网络状态-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--访问WIFI状态-->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!--访问精确定位-->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!--读取手机状态-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!--写入外部存储-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--读取外部存储-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!--安装卸载文件系统-->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!--修改音频设置-->
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <!--读取启动设置-->
    <uses-permission android:name="com.android.launcher.permission.READ_SETTINGS" />
    <!--唤醒锁屏，音视频通话所需-->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!--开机自启动-->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <!--悬浮窗权限-->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.GET_TASKS" />
</manifest>