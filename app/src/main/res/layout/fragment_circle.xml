<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/srl_circle"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <include layout="@layout/common_head" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_circle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="68dp"></android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/btn_goto_publish_circle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:text="发布"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:background="@drawable/shap_rec_30dp_login_next" />
    </RelativeLayout>
</android.support.v4.widget.SwipeRefreshLayout>