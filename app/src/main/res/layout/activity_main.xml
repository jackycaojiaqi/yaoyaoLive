<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fubang.video.ui.MainActivity">

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@color/white_f6"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:id="@+id/ll_main_home_page"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_main_home_page"
                    android:layout_width="24dp"
                    android:layout_height="26dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_main_home_select" />

                <TextView
                    android:id="@+id/tv_main_home_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="首页"
                    android:textColor="@color/gray_main_text"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_main_circle_page"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_main_circle_page"
                    android:layout_width="24dp"
                    android:layout_height="26dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_main_circle" />

                <TextView
                    android:id="@+id/tv_main_circle_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="生活圈"
                    android:textColor="@color/gray_main_text"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_main_home_message"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_main_home_message"
                    android:layout_width="24dp"
                    android:layout_height="26dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_main_message" />

                <TextView
                    android:id="@+id/tv_main_home_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="消息"
                    android:textColor="@color/gray_main_text"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_main_home_find"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_main_home_find"
                    android:layout_width="24dp"
                    android:layout_height="26dp"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/ic_main_find" />

                <TextView
                    android:id="@+id/tv_main_home_find"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="发现"
                    android:textColor="@color/gray_main_text"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_main_home_mine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_main_home_mine"
                    android:layout_width="24dp"
                    android:padding="2dp"
                    android:layout_height="26dp" android:layout_marginTop="5dp"
                    android:src="@drawable/ic_main_mine" />

                <TextView
                    android:id="@+id/tv_main_home_mine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="我的"
                    android:textColor="@color/gray_main_text"
                    android:textSize="10dp"
                   />
            </LinearLayout>
        </LinearLayout>
</LinearLayout>
