<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp">

        <TextView
            android:id="@+id/tv_rank_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="1"
            android:textColor="@color/black_3a3a3a"
            android:textSize="14dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_rank_pic"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/ic_default_pic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="75dp">
            <TextView
                android:id="@+id/tv_rank_name"
                android:layout_width="wrap_content"
                android:textColor="@color/black_3a3a3a"
                android:text="小心"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_rank_state"
                android:layout_width="40dp"
                android:layout_marginLeft="15dp"
                android:text="空闲"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="10dp"
                android:background="@drawable/shap_rec_30dp_login_next"
                android:layout_height="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center|left"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="75dp">
            <ImageView
                android:id="@+id/tv_rank_gender"
                android:background="@drawable/ic_home_female"
                android:layout_width="15dp"
                android:layout_height="15dp" />
            <TextView
                android:id="@+id/tv_rank_age"
                android:layout_width="wrap_content"
                android:text="18"
                android:textColor="@color/black_3a3a3a"
                android:gravity="center"
                android:layout_marginLeft="6dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_rank_city"
                android:layout_width="wrap_content"
                android:text="台州市"
                android:textColor="@color/black_3a3a3a"
                android:gravity="center"
                android:layout_marginLeft="10dp"

                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>