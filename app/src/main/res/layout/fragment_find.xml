<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include layout="@layout/common_head"></include>

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_find"
        android:layout_width="match_parent"
        android:background="@color/white"
        app:tabIndicatorColor="@color/bottom_radio_checked_text"
        app:tabSelectedTextColor="@color/main_color"
        app:tabTextColor="@color/gray_deep"
        android:layout_height="50dp"></android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_find"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
</LinearLayout>